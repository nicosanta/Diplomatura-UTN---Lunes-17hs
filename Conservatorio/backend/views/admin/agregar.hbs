<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 class="mb-3">Agregar Novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo"/>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" name="cuerpo" placeholder="Cuerpo"></textarea>
                </div>
                <div class="mb-3 row">
                    <label>Imagen: 
                        <input style="margin-top:10px" type="file" class="form-control" name="imagen"    id="imagen"/>
                    </label>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
             <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>
