<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="row mb-3">
                    <label for="">Titulo</label>
                    <input type="text" class="from-control" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="row mb-3">
                    <label for="">Cuerpo</label>
                    <textarea name="cuerpo" class="from-control">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
             <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>