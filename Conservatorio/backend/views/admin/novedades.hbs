<div class="container" style="margin-top:50px">
    {{!--fila1 --}}
    <div class="row">
        <p style="font-size: 32px;">Bienvenido, {{persona}}!</p>
    </div>
    <div>
        <a href="/admin/login/logout" class="btn btn-danger btn-sm active" role="button" aria-pressed="true">Cerrar
            sesi√≥n</a>
    </div>
    {{!--fila2 --}}
    <div class="row" style="margin-top: 20px;">
        <div class="col-7">
            <h3>Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/novedades/agregar">Nuevo</a>
        </div>
    </div>
    {{!--fila3 --}}
    <div class="row" style="margin-top: 10px;">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Cuerpo</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end">Editar</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{cuerpo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}"><i
                                    class="bi bi-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}"><i class="bi bi-trash"
                                    aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>